Q 01


........... save the works..............
Switch1> enable
Switch1# write memory
        OR
Switch1# copy running-config startup-config


........router name changed...........

Switch2> enable
Switch2# configure terminal
Switch2(config)# hostname S2
S2(config)# exit

..........cisco password for console line and vty interface lines..........

Switch2> enable
Switch2# configure terminal
Switch2(config)# line con 0
Switch2(config-line)# password cisco
Switch2(config-line)# login
Switch2(config-line)# exit

Switch2(config)# line vty 0 15
Switch2(config-line)# password cisco
Switch2(config-line)# login
Switch2(config-line)# exit
Switch2(config)# exit

........ secret password............

Switch1> enable
Switch1# configure terminal
Switch1(config)# enable secret cisco
Switch1(config)# exit


........... Encrypt all  passwords..........

Switch1> enable
Switch1# configure terminal
Switch1(config)# service password-encryption
Switch1(config)# exit

.......... (MODT) banner using “Authorized Person Only!”..................

Switch1> enable
Switch1# configure terminal
Switch1(config)# banner motd #
Authorized Person Only!
#
Switch1(config)# exit

............... Configure  Addressing Table...................
S2> enable
S2# configure terminal
S2(config)# interface FastEthernet0/1
S2(config-if)# ip address 192.168.1.5 255.255.255.0
S2(config-if)# no shutdown
S2(config-if)# exit

S2(config)# interface FastEthernet0/2
S2(config-if)# ip address 192.168.1.6 255.255.255.0
S2(config-if)# no shutdown
S2(config-if)# exit

S2(config)# interface FastEthernet0/3
S2(config-if)# ip address 192.168.1.7 255.255.255.0
S2(config-if)# no shutdown
S2(config-if)# exit
S2(config)# exit

..............vlan...........

S1> enable
S1# configure terminal
S1(config)# interface VLAN1
S1(config-if)# ip address 192.168.1.7 255.255.255.0
S1(config-if)# no shutdown
S1(config-if)# exit
S1(config)# exit

